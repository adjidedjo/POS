<table class="table table-striped">
  <thead>
    <tr>
      <th style="width: 225px">Kode Barang</th>
      <th style="width: 225px">Nama</th>
      <th style="width: 100px">Jumlah</th>
      <th style="width: 150px">Tanggal Kirim</th>
      <th style="width: 90px; text-align: center">Taken</th>
      <th style="width: 100px">Bonus</th>
      <th style="width: 200px">Serial</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= f.input :kode_barang, label: false, :input_html => {:style => 'width: 210px', :class => 'kode_barang'} %></td>
      <td><%= f.input :nama_barang, label: false, readonly: true, :input_html => {:style => 'width: 210px', :class => 'nama_barang'} %></td>
      <td><%= f.input :jumlah, label: false, :input_html => {:style => 'width: 90px'} %></td>
      <td><%= f.input :tanggal_kirim, as: :tanggal, label: false, :input_html => {:style => 'width: 210px'} %></td>
      <td><%= f.input :taken, label: false, :input_html => {:style => 'width: 100px'} %></td>
      <td><%= f.input :bonus, label: false, :input_html => {:style => 'width: 80px'} %></td>
      <td><%= f.input :serial, label: false, :input_html => {:style => 'width: 20 0px'} %></td>
      <%= f.hidden_field :_destroy %>
      <td><%= link_to "remove", '#', class: "remove_fields" %></td>
      </tr>
    </tbody>
  </table>

  <div id="modal-content" class="modal fade" tabindex="-1" role="dialog">
    <%= render 'items/index' %>
  </div>