<%= hidden_field_tag "kode_barang" %>
<%= hidden_field_tag "nama_barang" %>
<%= hidden_field_tag "jumlah" %>
<%= hidden_field_tag "serial" %>
<table id="pos" class="display table table-striped table-bordered responsive nowrap" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th class="desktop">Brand</th>
      <th class="desktop">Kode Barang</th>
      <th>Nama</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% Item.all.each do |item| %>
      <tr>
        <td><%= Brand.find(item.brand_id).brand %></td>
        <td><%= item.kode_barang %></td>
        <td><%= item.nama %></td>
        <td><%= link_to 'add', '#', remote: true,  :data => {:kode => item.kode_barang, :nama => item.nama}, class: 'add_to_sales'  %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>