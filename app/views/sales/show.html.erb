<%- model_class = Sale -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:asal_so) %>:</strong></dt>
  <dd><%= @sale.asal_so %></dd>
  <dt><strong><%= model_class.human_attribute_name(:salesman_id) %>:</strong></dt>
  <dd><%= @sale.salesman_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nota_bene) %>:</strong></dt>
  <dd><%= @sale.nota_bene %></dd>
  <dt><strong><%= model_class.human_attribute_name(:keterangan_customer) %>:</strong></dt>
  <dd><%= @sale.keterangan_customer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:venue_id) %>:</strong></dt>
  <dd><%= @sale.venue_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:spg) %>:</strong></dt>
  <dd><%= @sale.spg %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customer) %>:</strong></dt>
  <dd><%= @sale.customer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_number) %>:</strong></dt>
  <dd><%= @sale.phone_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hp1) %>:</strong></dt>
  <dd><%= @sale.hp1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hp2) %>:</strong></dt>
  <dd><%= @sale.hp2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:alamat_kirim) %>:</strong></dt>
  <dd><%= @sale.alamat_kirim %></dd>
  <dt><strong><%= model_class.human_attribute_name(:so_manual) %>:</strong></dt>
  <dd><%= @sale.so_manual %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              sales_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sale_path(@sale), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sale_path(@sale),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
