<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "PointOfSales" %></title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>

    <!-- For third-generation iPad with high-resolution Retina display: -->
    <!-- Size should be 144 x 144 pixels -->
    <%= favicon_link_tag 'apple-touch-icon-144x144-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '144x144' %>

    <!-- For iPhone with high-resolution Retina display: -->
    <!-- Size should be 114 x 114 pixels -->
    <%= favicon_link_tag 'apple-touch-icon-114x114-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '114x114' %>

    <!-- For first- and second-generation iPad: -->
    <!-- Size should be 72 x 72 pixels -->
    <%= favicon_link_tag 'apple-touch-icon-72x72-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png', :sizes => '72x72' %>

    <!-- For non-Retina iPhone, iPod Touch, and Android 2.1+ devices: -->
    <!-- Size should be 57 x 57 pixels -->
    <%= favicon_link_tag 'apple-touch-icon-precomposed.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png' %>

    <!-- For all other devices -->
    <!-- Size should be 32 x 32 pixels -->
    <%= favicon_link_tag 'favicon.ico', :rel => 'shortcut icon' %>

    <%= javascript_include_tag "application" %>
  </head>
  <body>

    <div class="navbar navbar-default navbar-static-top">
      <div class="container">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">PointOfSales</a>
        <div class="navbar-collapse collapse navbar-responsive-collapse">
          <% if current_user %>
            <ul class="nav navbar-nav">
              <li>
                <% if current_user.admin? %>
                  <%= drop_down "Masters" do %>
                    <%= menu_item "Bank Accounts", bank_accounts_path %>
                    <%= menu_item "Sales Counters", sales_counters_path %>
                    <%= menu_item "Admin Gudang", warehouse_admins_path %>
                    <%= menu_item "Channel Customers", channel_customers_path %>
                    <%= menu_item "Ultimate Customers", pos_ultimate_customers_path %>
                  <% end %>
                  <%= menu_item "Laporan Penjualan", new_search_sale_path %>
                <% elsif current_user.role == 'controller' %>
                  <%= render 'layouts/controller' %>
                <% elsif current_user.role == 'accounting' %>
                  <%= menu_item "Verify Payment", accounting_verifying_payments_path %>
                  <%= menu_item "Stock & Penjualan", accounting_stocks_mutasi_stock_path   %>
                <% else %>
                </li>
                <%= drop_down "Stok" do %>
                  <%= menu_item "Upload Intransit", import_intransit_channel_customers_path %>
                  <%= menu_item "Penerimaan Barang", item_receipts_receipt_path  %>
                  <%= menu_item "Nota Retur Display", return_items_return_path %>
                <% end %>
                <%= menu_item "Sales Order", new_sale_path, 'data-no-turbolink' => true %>
                <%= menu_item "Pelunasan", new_acquittance_path %>
    <%#= menu_item "Revisi Order", rekap_pelunasan_acquittances_path %>
                <%= drop_down "Export" do %>
                  <%= menu_item "Rekap SO Elite", reports_sales_counter_path(brand_id: 2)  %>
                  <%= menu_item "Rekap SO Lady", reports_sales_counter_path(brand_id: 4)  %>
                  <%= menu_item "Rekap SO Serenity", reports_sales_counter_path(brand_id: 6)  %>
                  <%= menu_item "Rekap SO Royal", reports_sales_counter_path(brand_id: 5)  %>
                  <%= menu_item "Rekap SO Technogel", reports_sales_counter_path(brand_id: 7)  %>
                  <%= menu_item "ReSend SO", reports_sales_counter_path  %>
                  <%= menu_item "Pelunasan", rekap_pelunasan_acquittances_path(cc_id: current_user.channel_customer.id) %>
                <% end %>
                <%= drop_down "Report" do %>
                  <%= menu_item "Rekap SO", sales_path %>
                  <%= menu_item "Rekap Stock", reports_available_stock_path %>
                  <%= menu_item "Laporan Mutasi Stock", reports_mutasi_stock_path %>
                  <%= menu_item "Selisih Intransit vs Penerimaan", reports_selisih_intransit_path %>
                  <%= menu_item "Selisih Stock vs Retur Display", reports_selisih_retur_path %>
                  <% if current_user.admin? %>
                    <%= menu_item "Laporan Penjualan", new_search_sale_path  %>
                  <% else %>
                    <%= menu_item "Laporan Penjualan", new_search_sale_path  %>
                  <% end %>
                <% end %>
              <% end %>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <% unless current_user.admin? || current_user.role == 'accounting' || current_user.role == 'controller' %>
                <%= drop_down current_user.channel_customer.nama.upcase do %>
                  <%= menu_item "Pengaturan Akun", edit_channel_customer_path(current_user.channel_customer), 'data-no-turbolink' => true  %>
                <% end %>
              <% end %>
              <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
            </ul>
          <% else %>
            <ul class="nav navbar-nav navbar-right">
              <li> <%= link_to 'Sign In', new_user_session_path %> </li>
            </ul>
          <% end %>
        </div>
      </div>
    </div>

    <div class="container">
      <%= bootstrap_flash %>
      <%= yield %>
      <%= render 'layouts/footer' %>

    </div><!--/row-->

  </body>
</html>
