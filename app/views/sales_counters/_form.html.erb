<%= simple_form_for(@sales_counter) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nama %>
    <%= f.input :nik %>
    <%= f.input :email %>
    <%= f.input :branch_id, collection: @branches, label_method: :cabang, value_method: :id, prompt: "--Pilih Cabang--" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
