<h5><b>Info:</b> Untuk Scan IN barang, pastikan kursor berada di kolom SERIAL lalu scan.</h5>
<br />
<%= form_tag item_receipts_process_receipt_path, :method => :put, :id => 'receipt_form' do %>
  <%= label_tag "SERIAL" %>
  <%= text_field_tag :serial %>
<% end %>
<br />
<h5><b>Info:</b> Tabel dibawah menampilkan barang yan telah di scan Hari ini.</h5>
<br />
<table id="table_receipt" class="display table table-striped table-bordered responsive nowrap" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="all">Serial</th>
      <th class="all">Kode Barang</th>
      <th class="all">Nama Barang</th>
      <th class="all">QTY</th>
      <th class="all">Harga</th>
    </tr>
  </thead>

  <tbody>
    <% @receipt.each do |resep| %>
      <tr>
        <td><%= resep.serial %></td>
        <td><%= resep.kode_barang %></td>
        <td><%= resep.nama %></td>
        <td><%= resep.jumlah %></td>
        <td><%= best_in_place resep, :price_list, :url => reports_update_path(id: resep.id), :place_holder => "KLIK DIISINI" %></td>
      </tr>
    <% end %>
  </tbody>
</table>