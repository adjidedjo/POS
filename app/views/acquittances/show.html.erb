<div class="page-header">
  <h1><%= @acquittance.no_reference.upcase %></h1>
</div>

<div class="row">
  <div class="col-md-6">
    <dt><strong>Channel Customer:</strong> <%= @acquittance.channel_customer.nama.titleize %></dt><br />
    <dt><strong>Tanggal:</strong> <%= @acquittance.created_at.to_date.strftime('%d %B %Y') %></dt><br />
  </div><br />
  <div>
    <table id="sale_item" class="display table table-striped table-bordered responsive nowrap" cellspacing="0" width="100%">
      <thead>
        <tr>
          <th class="all">Kode Barang</th>
          <th class="all">Nama Barang</th>
          <th class="min-tablet-l">Satuan</th>
          <th class="all">Jumlah</th>
          <th class="min-tablet-l">Bonus</th>
          <th class="min-tablet-l">Tanggal Kirim</th>
        </tr>
      </thead>
      <tbody>
        <% @acquittance.sale.sale_items.each do |sale_items| %>
          <tr>
            <td><%= sale_items.kode_barang %></td>
            <td><%= sale_items.nama_barang %></td>
            <td>PCS</td>
            <td><%= sale_items.jumlah %></td>
            <td><%= sale_items.bonus? ? "Bonus" : "-" %></td>
            <td><%= sale_items.tanggal_kirim.strftime('%d %B %Y') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-4">
    <dt><strong>Nama Customer :</strong> <%= @acquittance.sale.pos_ultimate_customer.nama.capitalize %></dt><br />
    <dt><strong>No Telp/Hp          :</strong> <%= @acquittance.sale.pos_ultimate_customer.no_telepon %>, <%= @acquittance.sale.pos_ultimate_customer.handphone %>, <%= @acquittance.sale.pos_ultimate_customer.handphone1 %></dt><br />
    <dt><strong>Alamat Kirim       :</strong> <%= @acquittance.sale.pos_ultimate_customer.alamat %></dt><br />
    <dt><strong>Kota       :</strong> <%= @acquittance.sale.pos_ultimate_customer.kota %></dt>
  </div>
  <br />
  <div class="col-md-7">

    <div class="row-fluid form-inline" style="width: 500px; padding-bottom: 5px;">
      <dt style="display: inline-block; width: 100px;"><strong>Total Balance:</strong></dt>
      <dt style="text-align: right; display: inline-block; width: 200px;"><%=currency(@acquittance.sale.previous_version.sisa) %></dt><br />
    </div>

    <dt style="padding-bottom: 5px;">Pembayaran</dt>

    <div class="row-fluid" style="padding-left: 10px;">

      <div class="row-fluid form-inline" style="width: 500px; padding-bottom: 5px;">
        <% if @acquittance.method_of_payment.include? ("Tunai") %>
          <dt style="display: inline-block; width: 90px;"><strong>Tunai:</strong></dt>
          <dt style="text-align: right; display: inline-block; width: 200px;"><%= currency(@acquittance.cash_amount) %></dt><br />
        <% end %>
      </div>

      <div class="row-fluid form-inline" style="width: 500px; padding-bottom: 5px;">
        <% if @acquittance.method_of_payment.include? ("Kartu Debit") %>
          <dt style="display: inline-block; width: 90px;"><strong>Kartu Debit:</strong></dt>
          <dt style="text-align: right; display: inline-block; width: 200px;"><%= currency(@acquittance.acquittance_with_debit_card.jumlah) %></dt><br />
        <% end %>
      </div>

      <div class="row-fluid form-inline" style="width: 500px; padding-bottom: 5px;">
        <% if @acquittance.method_of_payment.include? ("Kartu Kredit") %>
          <dt><strong>Kartu Kredit</strong></dt>
          <% @acquittance.acquittance_with_credit_cards.each do |cc| %>
            <dt style="display: inline-block; width: 90px; padding-left: 15px;"><strong><%= cc.nama_kartu.nil? ? '' : cc.nama_kartu %>:</strong></dt>
            <dt style="text-align: right; display: inline-block; width: 200px;"><%= currency(cc.jumlah) %></dt><br />
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="row-fluid form-inline" style="width: 500px; padding-bottom: 5px;">
      <dt style="display: inline-block; width: 100px;"><strong>Sisa Sekarang:</strong></dt>
      <dt style="text-align: right; display: inline-block; padding-left: 164px;"><%= currency(@acquittance.sale.sisa) %></dt>
    </div>
    <br />
  </div>
  <div class="col-md-6">
  </div>
  <br />
  <div class="col-md-12">
    <dt><strong>Jenis Pembayaran :</strong> <%= @acquittance.method_of_payment.capitalize %></dt><br />
    <dt><strong>Keterangan Pembayaran :</strong> <%= (@acquittance.sale.cara_bayar == 'um') ? 'Uang Muka' : @acquittance.sale.cara_bayar.capitalize %></dt><br />
  </div>
</div>

<%= link_to "Pelunasan Baru", new_acquittance_path, :class => 'btn btn-primary' %> |
<%= link_to "Print (PDF)", acquittance_path(@acquittance, :format => 'pdf'), :class => 'btn btn-default' %> |
<%= link_to 'Back', acquittances_path, :class => 'btn btn-default' %>
