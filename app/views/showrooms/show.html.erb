<%- model_class = Showroom -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nama:</strong></dt>
  <dd><%= @showroom.name.titleize %></dd>
  <dt><strong>Cabang:</strong></dt>
  <dd><%= Branch.find(@showroom.branch_id).cabang.gsub(/Cabang/, '') %></dd>
  <dt><strong>Kota:</strong></dt>
  <dd><%= @showroom.city.titleize %></dd>
  <dt><strong>Email Showroom(untuk masuk aplikasi):</strong></dt>
  <dd><%= @showroom.user.email %></dd>
  <dt><strong>Password Showroom(untuk masuk aplikasi):</strong></dt>
  <dd><%= @showroom.name.partition(' ').first + "*54321" %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              showrooms_path, :class => 'btn btn-default' if current_user.role == 'admin' %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_showroom_path(@showroom), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              showroom_path(@showroom),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' if current_user.role == 'admin' %>
