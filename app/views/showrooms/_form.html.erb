<%= simple_form_for @showroom, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@showroom[:name]) %>
  <%=f.association :branch, label_method: :cabang  , value_method: :id %>
  <%= error_span(@showroom[:branch_id]) %>
  <%= f.input :city %>
  <%= error_span(@showroom[:city]) %>

  <label>SPG/SPB</label>
  <div class="row">
    <%= f.simple_fields_for :sales_promotions do |builder| %>
      <%= render "sales_promotion_fields", :f => builder %>
    <% end %>
    <%= link_to_add_fields "Tambah SPG/SPB", f, :sales_promotions %>
  </div>
  <br />
  <label>Merchants</label>

  <div class="row">
    <%= f.simple_fields_for :merchants do |builder| %>
      <%= render "merchant_fields", :f => builder %>
    <% end %>
    <%= link_to_add_fields "Tambah Merchants", f, :merchants %>
  </div>
  <br />

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
    showrooms_path, :class => 'btn btn-default' %>
<% end %>