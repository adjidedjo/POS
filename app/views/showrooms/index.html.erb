<%- model_class = Showroom -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:branch_id) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @showrooms.each do |showroom| %>
      <tr>
        <td><%= link_to showroom.id, showroom_path(showroom) %></td>
        <td><%= showroom.name %></td>
        <td><%= Branch.find(showroom.branch_id).  cabang %></td>
        <td><%= showroom.city %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_showroom_path(showroom), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      showroom_path(showroom),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_showroom_path,
            :class => 'btn btn-primary' %>
