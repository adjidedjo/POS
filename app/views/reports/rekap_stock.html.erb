<table id="sales_rekap_stock" class="display table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Kode Barang</th>
      <th>Nama Barang</th>
      <th>Tanggal</th>
      <th>Penerimaan</th>
      <th>Pengeluaran</th>
      <th>Saldo</th>
      <th>Keterangan</th>
    </tr>
  </thead>

  <tbody>
    <% @report_stock.each do |rs| %>
      <tr>
        <td><%= rs.kode_barang %></td>
        <td><%= rs.nama %></td>
        <td><%= rs.tanggal   %></td>
        <td><%= rs.qty_in %></td>
        <td><%= rs.qty_out %></td>
        <td><%= StoreSalesAndStockHistory.where(kode_barang: rs.kode_barang, exhibition_id: rs.exhibition_id).sum(:qty_in) - StoreSalesAndStockHistory.where(kode_barang: rs.kode_barang, exhibition_id: rs.exhibition_id).sum(:qty_out) %></td>
        <td><%= rs.keterangan %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<br />