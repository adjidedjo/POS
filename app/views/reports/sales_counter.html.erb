<%= form_tag reports_export_xml_path(:format => :xml), :method => :get, :id => 'rekapsales' do %>
  <table style="layout: fixed" id="sales_rekap" class="display table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th><%= check_box_tag "check_all" %></th>
        <th>No SO</th>
        <th>Kode Pameran</th>
        <th>Nama Pameran</th>
        <th>Dari Tanggal</th>
        <th>Ke Tanggal</th>
        <th>Product Consultant</th>
        <th>Customer</th>
        <th>No Telp</th>
        <th>Alamat Kirim</th>
        <th>Email</th>
        <th>Total</th>
        <th>Voucher</th>
        <th>Jenis Pembayaran</th>
        <th>Tunai</th>
        <th>Nama Kartu Debit</th>
        <th>No Kartu Debit</th>
        <th>Kartu Debit Atas Nama</th>
        <th>Value Kartu Debit</th>
        <th>No Merchant</th>
        <th>Nama Merchant</th>
        <th>No Kartu Kredit</th>
        <th>Nama Kartu Kredit</th>
        <th>Kartu Kredit Atas Nama</th>
        <th>Value Kartu Kredit</th>
        <th>No Merchant</th>
        <th>Nama Merchant</th>
        <th>No Kartu Kredit</th>
        <th>Nama Kartu Kredit</th>
        <th>Kartu Kredit Atas Nama</th>
        <th>Value Kartu Kredit</th>
        <th>Sisa</th>
        <th>Kode Barang</th>
        <th>Brand</th>
        <th>Nama Barang</th>
        <th>Jumlah</th>
        <th>Bonus</th>
        <th>Tanggal Kirim</th>
        <th>Taken</th>
        <th>Serial</th>
      </tr>
    </thead>

    <tbody>
      <% @sales.each do |sale_item| %>
        <tr>
          <td><%= check_box_tag "sale_items_ids[]", sale_item.id %></td>
          <td><%= link_to sale_item.sale.no_so, sale_path(sale_item.sale.id) %></td>
          <td><%= sale_item.sale.store.kode_customer %></td>
          <td><%= sale_item.sale.store.nama %></td>
          <td><%= sale_item.sale.store.from_period %></td>
          <td><%= sale_item.sale.store.to_period %></td>
          <td><%= sale_item.user.sales_promotion.nama.capitalize %></td>
          <td><%= sale_item.sale.customer %></td>
          <td><%= sale_item.sale.phone_number %></td>
          <td><%= sale_item.sale.alamat_kirim %></td>
          <td><%= sale_item.sale.email %></td>
          <td><%= currency(sale_item.sale.netto) %></td>
          <td><%= currency(sale_item.sale.voucher) %></td>
          <td><%= currency(sale_item.sale.tipe_pembayaran) %></td>
          <td><%= currency(sale_item.sale.pembayaran) %></td>
          <td><%= sale_item.sale.payment_with_debit_card.nama_kartu %></td>
          <td><%= sale_item.sale.payment_with_debit_card.no_kartu %></td>
          <td><%= sale_item.sale.payment_with_debit_card.atas_nama %></td>
          <td><%= currency(sale_item.sale.payment_with_debit_card.jumlah) %></td>
          <% sale_item.sale.payment_with_credit_cards.each do |cc| %>
            <td><%= cc.no_merchant.present? ? cc.no_merchant : '-' %> </td>
            <td><%= cc.nama_merchant.present? ? cc.nama_merchant : '-' %> </td>
            <td><%= cc.no_kartu.present? ? cc.no_kartu : '-' %> </td>
            <td><%= cc.nama_kartu.present? ? cc.nama_kartu : '-' %> </td>
            <td><%= cc.atas_nama.present? ? cc.atas_nama : '-' %> </td>
            <td><%= currency(cc.jumlah) %></td>
          <% end %>
          <td><%= currency(sale_item.sale.sisa) %></td>
          <td><%= sale_item.kode_barang %></td>
          <td><%= Brand.find(sale_item.brand_id).brand %></td>
          <td><%= sale_item.nama_barang %></td>
          <td><%= sale_item.jumlah %></td>
          <td><%= sale_item.bonus? ? "BONUS" : "-" %></td>
          <td><%= sale_item.tanggal_kirim %></td>
          <td><%= sale_item.taken? ? "Yes" : "No" %></td>
          <td><%= sale_item.serial %></td>
        <% end %>
    </tbody>
  </table>
  <%= label_tag "Masukkan email sales counter" %>
  <%= text_field_tag :email %><br />
  <%= submit_tag "Export & Kirim", :class => 'btn btn-default' %>
<% end %>