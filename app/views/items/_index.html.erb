<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-body">
      <%- model_class = Item -%>
      <div class="page-header">
        <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
      </div>
      <%= hidden_field_tag "kode_barang" %>
      <%= hidden_field_tag "nama_barang" %>
      <table id="a" class="display table table-striped table-bordered responsive nowrap" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Kode Barang</th>
            <th>Nama Barang</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% Item.all.each do |item| %>
            <tr>
              <td><%= item.kode_barang %></td>
              <td><%= item.nama %></td>
              <td><%= link_to 'add', '#', remote: true, 'test' => raw("<div class='modal-text'>..</div>"), :data => {:kode => item.kode_barang, :nama => item.nama}, class: 'add_to_sales'  %> </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
