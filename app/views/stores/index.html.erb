<%- model_class = Store -%>
<div class="page-header">
  <h1>Pameran-Pameran</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Channel</th>
      <th><%= model_class.human_attribute_name(:nama) %></th>
      <th><%= model_class.human_attribute_name(:kota) %></th>
      <th>Dari Tanggal</th>
      <th>Sampai Tanggal</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.channel.channel %></td>
        <td><%= link_to store.nama, store_path(store) %></td>
        <td><%= store.kota %></td>
        <td><%= store.from_period.strftime('%d %B %Y') %></td>
        <td><%= store.to_period.strftime('%d %B %Y') %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_store_path(store), :class => 'btn btn-default btn-xs' %>
          <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      store_path(store),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_store_path,
            :class => 'btn btn-primary' %>
